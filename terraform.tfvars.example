# AWS Configuration
aws_region = "us-east-1"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
vpc_name             = "mlops-vpc"
enable_dns_hostnames = true
enable_dns_support   = true

# Subnet Configuration
az_count                = 2
subnet_bits             = 8
subnet_name_prefix      = "ml-subnet"
create_database_subnets = true

# Internet Gateway Configuration
igw_name = "mlops-igw"

# Route Tables Configuration
route_table_name_prefix = "rt"

# Security Groups Configuration
security_group_name_prefix = "sg"
create_alb_sg              = false
create_web_sg              = true
create_app_sg              = false
create_database_sg         = false
app_port                   = 8080
database_port              = 5432
ssh_cidr_blocks            = ["0.0.0.0/0"]

# IAM Configuration
iam_name_prefix              = "mlops"
iam_create_ec2_role          = true
iam_create_cloudwatch_policy = true
iam_create_ssm_policy        = true
iam_create_s3_policy         = true
iam_s3_bucket_name           = ""
iam_custom_policy_arns       = []

# EC2 Configuration
ec2_name_prefix         = "mlops"
ec2_instance_count      = 1
ec2_instance_type       = "t3.large"
ec2_ami_id              = null
ec2_use_private_subnets = false
ec2_associate_public_ip = true
ec2_key_name            = "mlops-key"
ec2_root_volume_type    = "gp3"
ec2_root_volume_size    = 30
ec2_encrypt_root_volume = true
ec2_user_data           = ""

# Tags
tags = {
  Environment = "production"
  Project     = "mlops"
  Owner       = "Layke"
} 