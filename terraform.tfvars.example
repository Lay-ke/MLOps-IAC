# AWS Configuration
aws_region = "us-east-1"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
vpc_name             = "mlops-vpc"
enable_dns_hostnames = true
enable_dns_support   = true

# Subnet Configuration
az_count                = 3
subnet_bits             = 8
subnet_name_prefix      = "subnet"
create_database_subnets = true

# Internet Gateway Configuration
igw_name = "mlops-igw"

# Route Tables Configuration
route_table_name_prefix = "rt"

# Security Groups Configuration
security_group_name_prefix = "sg"
create_alb_sg              = true
create_web_sg              = true
create_app_sg              = true
create_database_sg         = true
app_port                   = 8080
database_port              = 5432
ssh_cidr_blocks            = ["10.0.0.0/8", "192.168.1.0/24"]

# IAM Configuration
iam_name_prefix            = "mlops"
iam_create_ec2_role        = true
iam_create_cloudwatch_policy = false
iam_create_ssm_policy      = true
iam_create_s3_policy       = false
iam_s3_bucket_name         = ""
iam_custom_policy_arns     = []

# EC2 Configuration
ec2_name_prefix         = "mlops"
ec2_instance_count      = 2
ec2_instance_type       = "t3.micro"
ec2_ami_id              = null
ec2_use_private_subnets = false
ec2_associate_public_ip = true
ec2_key_name            = "my-existing-key-pair" # Name of your existing EC2 key pair
ec2_root_volume_type    = "gp3"
ec2_root_volume_size    = 20
ec2_encrypt_root_volume = true
ec2_user_data           = null

# Tags
tags = {
  Environment = "production"
  Project     = "mlops"
  Owner       = "devops-team"
  CostCenter  = "engineering"
  ManagedBy   = "terraform"
} 